<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dwr PUBLIC "-//GetAhead Limited//DTD Direct Web Remoting 2.0//EN" "http://getahead.org/dwr/dwr20.dtd">

<dwr>

  <allow>

		<create javascript="NewsAction" creator="spring">
			<param name="beanName" value="newsAction"></param>
		</create>
		
		<create javascript="ColumnAction" creator="spring">
			<param name="beanName" value="columnAction"></param>
		</create>
		
		
		<create javascript="SysUserSvc" creator="spring">
			<param name="beanName" value="sysUserSvc"></param>
		</create>
		
		 
		<create javascript="SysMenuSvc" creator="spring">
			<param name="beanName" value="sysMenuSvc"></param>
		</create>
		
		

		
		<!-- 定义允许dwr将User实例转换成JavaScript对象 -->
		<convert match="com.unis.app.login.model.User" converter="bean"/>
		<convert match="com.unis.app.news.model.News" converter="bean"/>
		<convert match="com.unis.app.column.model.Column" converter="bean"/>
	
  </allow>

</dwr>
